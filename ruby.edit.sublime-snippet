def create
	@${1} = ${2}.find(params[:id])

	respond_with @${1} do |format|
		if @${1}.update_attributes(params[:${1}])
			format.html { redirect_to @${1}, notice: I18n.t(:created, model: I18n.t(:${1}, scope: 'activerecord.models')) }
